{
  "name": "recipe-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "check": "npm run lint && prettier --write . && tsc --noEmit",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:status": "npx supabase status",
    "supabase:restart": "npm run supabase:stop && npm run supabase:start",
    "supabase:db-reset": "npx supabase db reset",
    "supabase:db-seed-images": "ts-node supabase/seed-images.js",
    "supabase:db-reset-all": "npm run supabase:db-reset && npm run supabase:generate-types",
    "supabase:generate-types": "npx supabase gen types typescript --local --schema public > ./src/types/definitions.ts",
    "supabase:generate-migration": "npx supabase db diff | npx supabase migration new",
    "supabase:push": "npx supabase push",
    "supabase:pull": "npx supabase pull",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@stripe/stripe-js": "^3.3.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.6",
    "@tippyjs/react": "^4.2.6",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "form-data": "^4.0.0",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.371.0",
    "moment-timezone": "^0.5.45",
    "next": "14.1.0",
    "pluralize": "^8.0.0",
    "react": "^18",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-focus-lock": "^2.11.1",
    "react-google-autocomplete": "^2.7.3",
    "react-hook-form": "^7.50.1",
    "stripe": "^15.3.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "~6.2",
    "@typescript-eslint/parser": "~6.2",
    "autoprefixer": "^10.0.1",
    "dotenv": "^16.4.4",
    "eslint": "~8.46",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "supabase": "^1.142.2",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "unplugin-icons": "^0.18.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
